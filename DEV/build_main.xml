<project name="IIB-CI-MAIN" default="dev" basedir="..">
  <description>IIB Continuous Integration(main script)</description>
	
	<property name = "app.name" value = ""/>
	<property name = "env.wrksp" value = ""/>
	<property name = "iib.svr" value = ""/>
  <target name="init">
    <tstamp />

  	<property name = "path.parent" value = "${basedir}"/>
  	
  	<property name="path.build" value="DEV" />
  	<property file="${path.build}/build.properties" />
  </target>

  <target name="dev" depends="init">

  	 <!-- Creating Bar File for the applications -->
  	
    <exec executable="mqsicreatebar">
      <arg value="-data" />
	   <arg value="${path.parent}" />
      <arg value="-b" />
      <arg value="${app.name}project.generated.bar" />
      <arg value="-a" />
      <arg value="${app.name}"/>
     <arg value="-deployAsSource" />
    </exec>
  	
 	 <!-- Applying Bar Override using Properties File -->
 	
   <exec executable="mqsiapplybaroverride">
     <arg value="-b" />
     <arg value="${app.name}project.generated.bar" />
     <arg value="-p" />
   	<arg value="${env.wrksp}/BarfileOverrides/DEV/${app.name}_DEV.properties"/>
	  <arg value="-r" /> 
	  <arg value="-o" />
   	<arg value="${var.path}${app.name}_DEV.bar"/>
   </exec>
 	
 	 <!-- Deploying Bar files to specific environment-->
 	
   <exec executable="mqsideploy">
     <arg value="-n" />
     <arg value="${iib.brkfileloc}${iib.brkfilename1}" />
     <arg value="-e" />
     <arg value="${iib.svr}" />
     <arg value="-a" />
     <arg value="${var.path}${app.name}_DEV.bar" />
   </exec>
 	
   <exec executable="mqsideploy">
     <arg value="-n" />
     <arg value="${iib.brkfileloc}${iib.brkfilename2}" />
     <arg value="-e" />
     <arg value="${iib.svr}" />
     <arg value="-a" />
     <arg value="${var.path}${app.name}_DEV.bar" />
   </exec>
 	
 	<!-- Backing up deployed Bar files with Date Time Stamp-->
 	
 	<copy file="${var.path}${app.name}_DEV.bar" overwrite="true" tofile="${var.path}backup/DEV/${app.name}_DEV.bar_${DSTAMP}${TSTAMP}"/>
  	
  	<!--Moving DEV Bar file to UAT folder for deployment-->
  	
  	<move file="${var.path}${app.name}_DEV.bar" overwrite="true" tofile="${var.path}UAT/${app.name}_DEV.bar"/>

  	 </target>
</project>
